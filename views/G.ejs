<!DOCTYPE html>
<html lang="en">
    <%- include ('layout/head') -%>

    <body id="page-top">
        <%- include ('layout/navbar') -%>
        <!-- Masthead-->
        <header class="masthead">
            <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
                <div class="d-flex justify-content-center">
                    <div class="text-center">
                        
                    </div>
                </div>
            </div>
            <!-- view for the user to book G appointment  -->
           <div class="text-center-login">
            <h1 id="h1" class="mx-auto my-0 text-uppercase">G</h1>
                <h1 class="text-white mb-2" style="font-size: 30px;"> Appointments</h1>  
            <div class="FirstClass">
                <form action="/checkAppointment" method="post" class="login">
              <h5 class="btnsub">Date</h5>
              <input type="date"value='<%= choosenDate %>' id ="date" name="date"/>   

              <input type="submit" style="width: 100px;" class="field" name="submit" id="submit" />
              </form>
            </div>
            <div class="FirstClass">
                <form action="/bookAppointment" method="post" class="login">
              <h5 class="btnsub">Time</h5>
              <input type="date" hidden style="width: 300px"  value='<%= choosenDate %>' id ="date" name="date"/>   
              <input type="text" hidden value="g" id ="TestType" name="TestType"/> 
              <select style="width: 150px"  name="time" id="time">
                  <%
                        timeSlots.forEach(element => {
                  %>
                      <option value="<%=element %>"><%=element %></option>
                  <%
                      });
                  %>
              </select>
              <input type="submit"style="width: 100px" class="field" name="submit" id="submit" value="Book"/>
              <p style="color: red;"><%= liDataerr %></p>

            </form>
            </div>
            <div class="grid1">
            <section class="personalInfo">
                <h1 class="text-white mb-2" style="font-size: 30px;"> Personal Information</h1>                  
                <div>
                    <label for="firstName">First name:&nbsp;</label>
                    <input type="text" id="firstName" name="firstName"  disabled value='<%= liData.firstName %>'>
                </div> 
                <div>
                    <label for="lastName">Last name:&nbsp;</label>
                    <input type="text" id="lastName" name="lastName"  disabled value='<%= liData.lastName %>' >
                </div>   
                <div>
                    <%
                              if(liData.licenseNumber == ""){
                        %>
                        <label for="licenseNumber">LicenseNo : </label>
                        <input type="text" id="licenseNumber" name="licenseNumber"  disabled value='<%= liData.licenseNumber %>'>
                        <%
                            }
                        %>
                    
                    
                </div>
                <div>
                    <label for="age">Age :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input type="number" id="age" name="age"  disabled  value='<%= liData.age %>' >
                </div>                 
                <div>
                    <label for="date">DOB:</label>
                    <input type="date" id="date" name="date" disabled value='<%= liData.date %>'>

                </div>    
            </section> 
            <form method="post" action="/G2/dataUpdated"> 
            <section class="carInfo">
                <h1 class="text-white mb-2" style="font-size: 30px;"> Car Information</h1>                  
                <div>
                    <label for="make">Make: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input type="text" id="make" name="make"  value="<%=carData.make %>" >
                </div> 
                <div>
                    <label for="model">Model: &nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input type="text" id="model" name="model"  value="<%=carData.model %>">
                </div>   
                <div>
                    <label for="year">Year  : &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    <input type="number" id="year" name="year"  value='<%= carData.year %>'>
                </div>                 
                <div>
                    <label for="plateNumber">Plate No :</label>
                    <input type="text" id="plateNumber" name="plateNumber"  value="<%=carData.plateNumber %>">
                </div> 

                <div>
                    <input type="text" id="licenseNumber" name="licenseNumber"  hidden value='<%=carData.licenseNumber %>'>
                    
                </div>
            </section>
            <input type="submit"  name="submit" value="Save">
            </form>
            </div>
             
            
              </section> 
            
        </div>

        </header>
        <!-- About-->
        
        <%- include ('layout/sectionFooter') -%>
        <%- include ('layout/script') -%>
    </body>
</html>
<style>
    div{
        margin-bottom: 10px;
    }
    .grid1{
        display: grid;
        grid-template-columns: 50% 50%;

    }
    .text-center-login {
        bottom: 750px;
    }
   
</style>