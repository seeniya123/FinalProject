<!DOCTYPE html>
<html lang="en">
    <%- include ('layout/head') -%>

    <body id="page-top">
        <%- include ('layout/navbar') -%>
        <!-- Masthead-->
        <header class="masthead">
            <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
                <div class="d-flex justify-content-center">
                    <div class="text-center">
                        <!-- view for the user to sign_up  -->
                        <h1 class="mx-auto my-0 text-uppercase">SIGN UP</h1>
                    </div>
                </div>
            </div>
            <div class="text-center-login">
                  
               
         <div class="logFirst">
            <form method="POST"  action="/signup">
                <section style="margin-top: 100px;">
                    <P>SIGN UP</P>
                    <div>
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="username">
                    </div>               
                    <div>
                        <label for="password">Password:</label>
                        <input type="password" id="pass" name="password">
                    </div>
                    <div style="margin-right: 60px;">
                        <label for="password">Repeat Password:</label>
                        <input type="password" id="pass" name="onepassword">
                    </div> 
                    <div style="margin-right: 105px;">
                    <label for="userType">User Type:</label>
                    <select name="usertype" id="userType">
                    <option value="Driver">Driver</option>
                    <option value="Examiner">Examiner</option>
                    <option value="Admin">Admin</option>
                    </select> 
                    </div>
                    <input style="margin-top: 20px;" class="submit" name="submit" type="submit" value="Sign Up">   
                    
                </section>
                </form>
            </div>
            </div>
        </header>
        <!-- About-->
        
        <%- include ('layout/sectionFooter') -%>
        <%- include ('layout/script') -%>
    </body>
</html>


<style>

.text-center-login{
    display: grid;
    grid-template-columns: 50% 50%;
}
.logFirst{
   margin-top: 12%;
}

.logFirst section , .signFirst section{
    display: grid;
    grid-gap: 10px;
    
}
.submit{
   width: 100px;
   text-align: center;
   margin-left: 50%;
}
</style>